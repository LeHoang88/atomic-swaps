{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 4,
        "printWidth": 120,
        "parser": "typescript",
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true
      }
    }
  ]
}
