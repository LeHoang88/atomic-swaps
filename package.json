{
    "name": "atomic-swaps",
    "version": "1.0.0",
    "main": "build/index.js",
    "license": "MIT",
    "dependencies": {
        "ethers": "^5.0.26",
        "musig-bindings": "link:../schnorr-musig/wasm/musig-bindings",
        "zksync": "link:../../zksync-dev/sdk/zksync.js",
        "zksync-crypto": "link:../../zksync-dev/sdk/zksync-crypto"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.22",
        "chai": "^4.2.0",
        "mocha": "^8.2.1",
        "prettier": "^2.2.1",
        "prettier-plugin-solidity": "^1.0.0-beta.3",
        "solc": "^0.7.0",
        "ts-node": "^9.1.1",
        "typedoc": "^0.20.16",
        "typescript": "^4.1.3"
    },
    "scripts": {
        "build:ts": "tsc -b",
        "build:sol": "solcjs -o build --bin --optimize --base-path . contracts/Deployer.sol",
        "build": "yarn build:ts && yarn build:sol",
        "doc": "typedoc",
        "test": "mocha --no-timeout --no-color --bail -r ts-node/register test/*.test.ts",
        "fmt:ts": "prettier --config fmt-ts.json --write {src,test}/*.ts",
        "fmt:sol": "prettier --config fmt-sol.json --write contracts/*.sol",
        "fmt": "yarn fmt:ts && yarn fmt:sol"
    }
}
