{
    "name": "atomic-swaps",
    "version": "1.0.0",
    "main": "build/index.js",
    "license": "MIT",
    "dependencies": {
        "ethers": "^5.0.29",
        "musig-bindings": "link:../schnorr-musig/wasm/musig-bindings",
        "zksync": "link:../../zksync-dev/sdk/zksync.js",
        "zksync-crypto": "link:../../zksync-dev/sdk/zksync-crypto"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.25",
        "chai": "^4.3.0",
        "mocha": "^8.2.1",
        "prettier": "^2.2.1",
        "prettier-plugin-solidity": "^1.0.0-beta.4",
        "solc": "^0.7.7",
        "ts-node": "^9.1.1",
        "typedoc": "^0.20.23",
        "typescript": "^4.1.3"
    },
    "scripts": {
        "build:ts": "tsc -b",
        "build:sol": "solcjs -o build --bin --optimize --base-path . contracts/Deployer.sol",
        "build": "yarn build:ts && yarn build:sol",
        "doc": "typedoc",
        "test": "mocha test/*.test.ts -f exodus -i",
        "exodus": "mocha test/*.test.ts -f exodus",
        "fmt:ts": "prettier --config fmt-ts.json --write {src,test}/*.ts",
        "fmt:sol": "prettier --config fmt-sol.json --write contracts/*.sol",
        "fmt": "yarn fmt:ts && yarn fmt:sol"
    },
    "mocha": {
        "exit": true,
        "bail": true,
        "color": false,
        "timeout": 0,
        "require": [
            "ts-node/register"
        ]
    }
}
