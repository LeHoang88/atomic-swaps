{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "outDir": "build",
        "esModuleInterop": true,
        "noEmitOnError": true,
        "declaration": true
    },
    "files": [ "src/index.ts" ],
    "typedocOptions": {
        "entryPoints": [ "src/index.ts" ],
        "out": "docs",
        "theme": "minimal",
        "excludePrivate": true,
        "excludeProtected": true,
        "name": "Atomic Swap SDK",
        "hideGenerator": true
    }
}
